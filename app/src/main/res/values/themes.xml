<resources>
    <!-- Base application theme. -->
    <style name="Theme.WarehouseWizard" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_color</item>
        <item name="colorPrimaryVariant">@color/background_secondary_color</item>
        <item name="colorOnPrimary">@color/accent_btn_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/selected_element_color</item>
        <item name="colorSecondaryVariant">@color/text_hint_secondary_color</item>
        <item name="colorOnSecondary">@color/text_primary_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_color</item>

        <!-- Pointer to Overflow style ***MUST*** go here or it will not work -->
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>

        <!-- Customize your theme here. -->
    </style>

    <!-- Styles -->
    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_filter_list</item>
    </style>


</resources>